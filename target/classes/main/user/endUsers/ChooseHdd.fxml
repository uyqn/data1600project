<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.user.endUsers.ChooseHddController">
   <center>
      <GridPane prefHeight="500.0" prefWidth="1000.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="45.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="64.0" minHeight="0.0" prefHeight="29.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="392.0" minHeight="10.0" prefHeight="352.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="119.0" minHeight="0.0" prefHeight="64.0" valignment="TOP" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label prefHeight="36.0" prefWidth="129.0" text="Choose HDD">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="37.0" prefWidth="481.0" GridPane.rowIndex="1">
               <children>
                  <ChoiceBox fx:id="filterBox" prefHeight="25.0" prefWidth="318.0" />
                  <TextField fx:id="filterText" onKeyReleased="#filterEvt" prefHeight="25.0" prefWidth="732.0" />
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="361.0" prefWidth="225.0" GridPane.rowIndex="2">
               <columns>
                  <TableColumn fx:id="ManufacturerColumn" prefWidth="92.66668701171875" text="Manufacturer" />
                  <TableColumn fx:id="ModelColumn" prefWidth="96.66668701171875" text="Model" />
                  <TableColumn fx:id="PriceColumn" prefWidth="102.33331298828125" text="Price" />
                  <TableColumn fx:id="CapacityColumn" prefWidth="91.66668701171875" text="Capacity" />
                  <TableColumn fx:id="RpmColumn" prefWidth="172.3333740234375" text="RPM" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" GridPane.rowIndex="3">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#GoBack" text="Back" />
                  <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#GoNext" text="Next" />
               </children>
            </HBox>
            <TreeView fx:id="treeView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="priceLabel" text="Total price: " GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</BorderPane>
